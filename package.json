{
  "name": "babel-plugin-react-native-platform-specific-extensions",
  "version": "1.1.1",
  "description": "Allow react-native platform specific extensions to be used for other file types than Javascript.",
  "keywords": [
    "babel",
    "babel-plugin"
  ],
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint ."
  },
  "author": "Krister Kari",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kristerkari/babel-plugin-react-native-platform-specific-extensions"
  },
  "files": [
    "CHANGELOG.md",
    "index.js",
    "README.md"
  ],
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.1",
    "babel-plugin-tester": "^5.4.0",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^3.0.1",
    "eslint": "^5.0.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "jest-cli": "^23.1.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5"
  },
  "dependencies": {
    "@babel/template": "^7.0.0-beta.49"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "jest": true
    },
    "rules": {
      "space-before-function-paren": [
        2,
        "never"
      ],
      "semi": [
        2,
        "always"
      ],
      "quotes": 0,
      "no-unused-vars": 2
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  },
  "jest": {
    "coverageDirectory": "./.coverage/",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  }
}
