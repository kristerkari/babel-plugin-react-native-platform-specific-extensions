{
  "name": "babel-plugin-react-native-platform-specific-extensions",
  "version": "1.1.1",
  "description": "Allow react-native platform specific extensions to be used for other file types than Javascript.",
  "keywords": [
    "babel",
    "babel-plugin"
  ],
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint ."
  },
  "author": "Krister Kari",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kristerkari/babel-plugin-react-native-platform-specific-extensions"
  },
  "files": [
    "CHANGELOG.md",
    "index.js",
    "README.md"
  ],
  "devDependencies": {
    "@babel/eslint-plugin-development": "^1.0.1",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
    "babel-plugin-tester": "^5.5.2",
    "babel-preset-es2015": "^6.24.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.4.1",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "dependencies": {
    "@babel/template": "^7.2.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "plugins": [
      "@babel/development"
    ],
    "env": {
      "jest": true
    },
    "rules": {
      "space-before-function-paren": [
        2,
        "never"
      ],
      "semi": [
        2,
        "always"
      ],
      "quotes": 0,
      "no-unused-vars": 2,
      "@babel/development/no-deprecated-clone": 2,
      "@babel/development/no-undefined-identifier": 2,
      "@babel/development/plugin-name": 2
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": false,
    "trailingComma": "none"
  },
  "jest": {
    "coverageDirectory": "./.coverage/",
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  }
}
